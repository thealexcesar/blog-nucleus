<p id="notice"><%= notice %></p>
<div class="container py-5 col-10">

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%#= render 'comments/comment' %>

<div class="container col-4 bg-dark text-white">
  <h2 class="h3">Comments</h2>
  <div id="comments">
    <%= render @post.comments %>
  </div>
</div>
<%= render 'comments/new', post: @post %>
</div>